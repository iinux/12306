server {
    listen 5000;
    
    location / {
        include      uwsgi_params;
        uwsgi_pass   127.0.0.1:8001;  # 指向uwsgi 所应用的内部地址,所有请求将转发给uwsgi 处理
        uwsgi_param UWSGI_PYHOME /home/abui/kernel/12306/bjmetro; # 指向虚拟环境目录
        uwsgi_param UWSGI_CHDIR  /home/abui/kernel/12306/bjmetro; # 指向网站根目录
        uwsgi_param UWSGI_SCRIPT web:app; # 指定启动程序
        uwsgi_read_timeout 100;
    }
}
